datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator db {
  provider = "go run github.com/steebchen/prisma-client-go"
}

model Book {
  id            String   @id @default(cuid())
  title         String
  author        String
  description   String
  publishedDate String?
  genre         String?
  pages         Int?
  language      String?
  status        String?  @default("available")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
} 